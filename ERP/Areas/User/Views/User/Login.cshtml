@model ERP.Common.Entities.LoginUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login">
    <h2>Login</h2>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    @using (Html.BeginForm("Login", "User", new { area = "User" }, FormMethod.Post))
    {
        @Html.TextBoxFor(x => x.UserName, new { @class = "input-md", placeholder = "User name" })
        @Html.ValidationMessageFor(x => x.UserName)

        @Html.PasswordFor(x => x.Password, new { @class = "input-md", placeholder = "Password" })
        @Html.ValidationMessageFor(x => x.Password)
        
        <button type="submit" class="btn btn-primary btn-block btn-large"> Log in </button>
    }
    <br />
    @Html.RouteLink("Forgot password?", "User_default", new { action = "ForgotPassword", controller = "User" })
</div>
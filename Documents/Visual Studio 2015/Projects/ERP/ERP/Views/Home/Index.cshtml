@model ERP.Common.Models.User

@{
    ViewBag.Title = "Gastronomy management system";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gastronomy management system</h2>

@*<a href="#" data-toggle="modal" data-target="#login-modal">Login</a>*@

@* log in view *@
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
<div class="panel form-signin">
    <div class="panel-heading">Login to your account</div>
    <div class="panel-body">
            <div class="form-group">
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control input-sm", placeholder = "User name" })
            </div>
        <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control input-sm", placeholder = "Password" })
        </div>
        <div class="form-group center">
                <input type="submit" value="Sign in" class="btn btn-primary" />
        </div>
    </div>
</div>
    }